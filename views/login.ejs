<!-- ==================== HEADER ==================== -->
<%- include('partials/header') %>

<div class="login-container">
    <div class="login-header">
        <img src="./img/logotipo.webp" alt="Logo Damabrava">
        <h1>Bienvenido</h1>
        <p>Ingresa tu PIN para continuar</p>
    </div>

    <div class="pin-section">
        <div class="pin-dots">
            <span class="pin-dot"></span>
            <span class="pin-dot"></span>
            <span class="pin-dot"></span>
            <span class="pin-dot"></span>
        </div>
        <div class="error-message"></div>
    </div>

    <div class="keyboard-section">
        <div class="numeric-keyboard">
            <button class="num-key ripple">1</button>
            <button class="num-key ripple">2</button>
            <button class="num-key ripple">3</button>
            <button class="num-key ripple">4</button>
            <button class="num-key ripple">5</button>
            <button class="num-key ripple">6</button>
            <button class="num-key ripple">7</button>
            <button class="num-key ripple">8</button>
            <button class="num-key ripple">9</button>
            <button class="num-key clear ripple">C</button>
            <button class="num-key ripple">0</button>
            <button class="num-key delete ripple">
                <i class="fas fa-backspace"></i>
            </button>
        </div>
    </div>
</div>

<div class="loading-screen">
    <div class="loading-content">
        <div class="loading-logo">
            <img src="./img/logotipo.webp" alt="Logo Damabrava">
        </div>
        <div class="loading-text">
            <span>D</span><span>a</span><span>m</span><span>a</span>
            <span>b</span><span>r</span><span>a</span><span>v</span><span>a</span>
        </div>
    </div>
</div>

<%- include('partials/footer') %>